<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nicktardif.seniorproject.goshnaforairlines.SettingsActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:id="@+id/airport_settings_section">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Airport:"
            android:layout_weight="1"
            android:id="@+id/airport_settings_label"/>

        <EditText
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/airport_settings_field"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/airport_settings_section"
        android:id="@+id/gate_settings_section">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Gate:"
            android:layout_weight="1"
            android:id="@+id/gate_settings_label"/>

        <EditText
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/gate_settings_field"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text= "Save Settings"
        android:id = "@+id/save_settings_button"/>

</RelativeLayout>
